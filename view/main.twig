  <body id="page">
    <div class="hamburger_icon" id="hamburger_icon">
      <div class="bar1"></div>
      <div class="bar2"></div>
      <div class="bar3"></div>
    </div>
    <header id="menu" class="hidden">
      <div class="wrapper">
        <div class="navbar">
          <img src="./public/img/logo.png" class="logo" alt="logo"/>
          <nav>
            <ul>
              <li>
                <a href="#page" class="menu_button">Home</a>
              </li>
              <li>
